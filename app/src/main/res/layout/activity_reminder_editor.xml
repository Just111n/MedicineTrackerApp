<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReminderEditorActivity"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="147dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:text="New Reminder"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp" />
    <ImageView
        android:id="@+id/charaImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_reminder_editor"
        android:contentDescription="Image of medicine for New Reminder Activity"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Name"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edit_medName_editText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/purple_theme_dark"
        android:hint="Enter medicine name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#A1000000"
        android:textSize="20sp"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/TypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="Type"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/pills_ImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"

            android:background="@drawable/roundcorners1"
            android:backgroundTint="@color/button_background_colour"
            android:src="@drawable/pill_image"
            android:contentDescription="Image of pills for medication reminder"
            />


        <ImageButton
            android:id="@+id/syrup_ImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundcorners1"
            android:backgroundTint="@color/button_background_colour"
            app:srcCompat="@drawable/syrup_image"
            android:contentDescription="Image of syrup for medication reminder"
            />

        <ImageButton
            android:id="@+id/injection_ImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundcorners1"
            android:backgroundTint="@color/button_background_colour"
            app:srcCompat="@drawable/injection_image"
            android:contentDescription="Image of injection for medication reminder"/>

    </LinearLayout>
    <TextView
        android:id="@+id/schedule_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"

        android:text="Time Of Notifications"

        android:textColor="@color/black"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/med_notification_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_corners"
            android:text="Pick time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/med_notification_time_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick time"
            android:backgroundTint="@color/purple_theme_dark"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="15dp"
            />
    </LinearLayout>


        <TextView
            android:id="@+id/dosage_text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:text="Dosage"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/Dosage_edittext"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:hint="Eg. 2 pills "
            android:textSize="16sp"
            android:inputType="text"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_reminder_button"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#4F517D"
        android:text="Add Reminder"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_reminder_button"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#87202f"
        android:text="Delete Reminder"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"

        />


</LinearLayout>